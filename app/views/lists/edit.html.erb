<h1>Editing Book</h1>


    
<%= form_with model: @book, url: update_list_path(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book  ' %>
  <%= link_to "show", book_path(@book.id) %>
  <a href = "/books"> back </a>
  <% end %>
  
  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>